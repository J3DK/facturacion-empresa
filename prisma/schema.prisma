// Prisma schema file
// learn more about it in the docs: https://pris.ly/d/prisma-schema

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

// Usuario
model User {
  id            String    @id @default(cuid())
  email         String?   @unique
  name          String?
  image         String?
  password      String?
  emailVerified DateTime?
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt

  // Relaciones
  accounts      Account[]
  sessions      Session[]
  clientes      Cliente[]
  productos     Producto[]
  facturas      Factura[]
  gastos        Gasto[]
  configuracion Configuracion?

  @@map("users")
}

// NextAuth Account
model Account {
  id                 String  @id @default(cuid())
  userId             String
  type               String
  provider           String
  providerAccountId  String
  refresh_token      String?  @db.LongText
  access_token       String?  @db.LongText
  expires_at         Int?
  token_type         String?
  scope              String?
  id_token           String?  @db.LongText
  session_state      String?

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
  @@map("accounts")
}

// NextAuth Session
model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@map("sessions")
}

// NextAuth Verification Token
model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
  @@map("verification_tokens")
}

// Clientes
model Cliente {
  id            String    @id @default(cuid())
  userId        String
  nombre        String
  email         String?
  telefono      String?
  direccion     String?
  ciudad        String?
  codigoPostal  String?
  pais          String?   @default("España")
  rfc           String?
  razonSocial   String?
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt

  user          User      @relation(fields: [userId], references: [id], onDelete: Cascade)
  facturas      Factura[]

  @@index([userId])
  @@map("clientes")
}

// Productos
model Producto {
  id              String    @id @default(cuid())
  userId          String
  nombre          String
  descripcion     String?   @db.LongText
  precioUnitario  Float
  sku             String?
  categoria       String?
  stock           Int       @default(0)
  createdAt       DateTime  @default(now())
  updatedAt       DateTime  @updatedAt

  user            User      @relation(fields: [userId], references: [id], onDelete: Cascade)
  itemsFactura    ItemFactura[]

  @@index([userId])
  @@map("productos")
}

// Facturas
model Factura {
  id              String    @id @default(cuid())
  userId          String
  numeroFactura   String    @unique
  fecha           DateTime
  clienteId       String
  subtotal        Float     @default(0)
  iva             Float     @default(0)
  retencion       Float     @default(0)
  totalFinal      Float     @default(0)
  estado          String    @default("pendiente")
  notas           String?   @db.LongText
  numeroOrden     String?
  condicionPago   String?
  metodoPago      String?
  fechaVencimiento DateTime?
  createdAt       DateTime  @default(now())
  updatedAt       DateTime  @updatedAt

  user            User      @relation(fields: [userId], references: [id], onDelete: Cascade)
  cliente         Cliente   @relation(fields: [clienteId], references: [id], onDelete: Cascade)
  items           ItemFactura[]

  @@index([userId])
  @@index([clienteId])
  @@index([estado])
  @@index([fecha])
  @@map("facturas")
}

// Items de Factura
model ItemFactura {
  id              String    @id @default(cuid())
  facturaId       String
  productoId      String
  cantidad        Int
  precioUnitario  Float
  ivaAplicado     Int       @default(0)
  subtotal        Float
  createdAt       DateTime  @default(now())
  updatedAt       DateTime  @updatedAt

  factura         Factura   @relation(fields: [facturaId], references: [id], onDelete: Cascade)
  producto        Producto  @relation(fields: [productoId], references: [id], onDelete: Cascade)

  @@index([facturaId])
  @@index([productoId])
  @@map("items_factura")
}

// Gastos
model Gasto {
  id              String    @id @default(cuid())
  userId          String
  descripcion     String
  cantidad        Float
  categoria       String
  fecha           DateTime
  documento       String?
  notas           String?   @db.LongText
  createdAt       DateTime  @default(now())
  updatedAt       DateTime  @updatedAt

  user            User      @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId])
  @@index([fecha])
  @@map("gastos")
}

// Configuración por usuario
model Configuracion {
  id              String    @id @default(cuid())
  userId          String    @unique
  nombreEmpresa   String?
  rfc             String?
  direccion       String?
  ciudad          String?
  codigoPostal    String?
  pais            String?   @default("México")
  email           String?
  telefono        String?
  logo            String?   @db.LongText
  porcentajeIva   Float     @default(16.0)
  porcentajeRetencion Float @default(10.0)
  metodoPago      String?   @default("Transferencia bancaria")
  notasLegales    String?   @db.LongText
  condicionesPago String?   @db.LongText
  createdAt       DateTime  @default(now())
  updatedAt       DateTime  @updatedAt

  user            User      @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@map("configuracion")
}
